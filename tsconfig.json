{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["dom", "dom.iterable", "esnext"], // Add this for DOM types
    "jsx": "react-jsx", // Add this for React JSX support
    "module": "esnext", // Change from "commonjs" to "esnext"
    "moduleResolution": "node", // Uncomment this
    "resolveJsonModule": true, // Enable this for JSON imports
    "allowJs": true, // Enable this to allow JavaScript files
    "noEmit": true, // Enable this for React projects
    "isolatedModules": true, // Enable this for better module isolation

    // These are good to keep as is
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    // Optional but recommended settings
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*"], // Add this to include your source files
  "exclude": ["node_modules", "build", "dist"] // Add this to exclude certain directories
}
